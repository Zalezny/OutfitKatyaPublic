<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_hour_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tv_date_hours_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2022-22-22, 21:37"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_time_hours_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="05:05:05"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/cl_hour_item"
        android:src="@drawable/line_straight_solid"
        android:background="@color/white"/>




</RelativeLayout>